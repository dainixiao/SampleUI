<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="hotel_tel_nav_padding" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:layout_gravity">bottom</item>
    </style>
    <style name="diet_tv_gravity" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="diet_tv_distance" parent="android:Widget.Holo.Light.TextView">
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:paddingRight">@dimen/diet_tv_padding_right</item>
    </style>
    <style name="common_title_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/commom_title</item>
        <item name="android:padding">15dip</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="tvplay_type_grad_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:textSize">@dimen/tvplay_type_size</item>
    </style>
    <style name="mobilestory_tv_style" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingTop">30dip</item>
        <item name="android:textColor">@color/food_price_color</item>
        <item name="android:textSize">@dimen/hotles_story_name_size</item>
    </style>
</resources>
